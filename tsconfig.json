{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "Node",
		"target": "ES6",
		"outDir": "./build",
		"strict": true,
		"noImplicitAny": false,
		"removeComments": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"emitDecoratorMetadata": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"noUnusedLocals": false
	}
}
